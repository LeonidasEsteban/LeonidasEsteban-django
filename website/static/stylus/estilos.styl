@import "classes.styl"

*
    margin 0

body
    font-family: 'Open Sans', sans-serif;
    font-weight 300
    color #323E4A
    background #F2F2F2
    font-size 16px
h1
h2
h3
    font-weight 300
li
    list-style none
a
    text-decoration none

.avatar
    text-align center 
    svg
        max-width 300px
        height 250px
.contratame
    align-content center
    border-bottom 10px dashed #4AD391
    border-top 10px dashed #4AD391
    box-sizing border-box
    display flex
    margin 20px 0
    padding 30px 10px
    flex-wrap wrap
    text-align center
    .big
        font-size 30px
.frases
    margin-bottom 150px
    &.extended
        // margin 0 20px
        padding 20px
    .frase 
        .text
            font-size 30px
            &:first-letter
                font-size 40px
                font-weight bold
                text-decoration underline
        .details
            float right
        .author
        .date
            font-size 12px
        .author
            // font-style italic
            font-size 15px
            font-weight bold
            text-decoration underline
        .twitter
            font-size 10px


.header
    background #4AD391
    bottom 0
    padding 20px
    position fixed
    top 0
    width 380px
    text-align center
    animation header .5s
    transition .3s
    z-index 1
    color white
    overflow hidden
    a
        color white

    .twitter
        text-align left

        a
            font-size 15px
    .lista
        margin 0 -40px
        position relative
        right 20px
        .item
            a
                display block
                text-decoration none
                padding 10px
                text-transform uppercase
                font-size 22px
                &:hover 
                    color #404045
                    background #F2F2F2
                &.active
                    color #404045
                    text-decoration line-through !important
.name
    font-weight bold
    text-transform uppercase
    font-size 25px
    line-height 25px
    // text-shadow 1px 1px 0 #404045
    text-align left

    span
        font-weight 300
        display block
        font-size 16px
        text-transform none
        text-shadow none
        text-decoration underline
.image
    display inline-block
    img 
        max-width 100%
.video
    position relative
    border 20px solid #4AD391
    border-left none
    border-radius 10px
    border-right none
    margin 10px 30px
    padding-bottom 30px 
    padding-top 56.25%
    iframe
    video
        position absolute
        top 0
        left 0
        height 100%
        width 100%
.social
    text-align left
    position absolute
    bottom 0
.wrapper
    margin-left 420px
    padding 20px
    animation wrapper .7s 
    position relative
    li
        position relative
        &:before
            position absolute
            left -10px
            content "â€¢"
    a
        color #404045
        &:hover 
            color #1384C7
            text-decoration underline
    .link
        color #1384C7
        text-decoration underline
        margin 10px
        display inline-block
    .title
        font-size 40px
        display inline-block
        border-bottom 1px solid #4AD391
        margin-bottom 20px
    .subtitle
        color white
        font-size 15px
        text-transform uppercase
        span
            background #4AD391
            display inline-block
            padding 0px 50px 0 5px
            border-radius 5px 5px 0 0
            border-bottom 2px solid #404045





@keyframes wrapper
    from
        right 100%
    to
        right 0
@keyframes header
    from
        left -300px
    to
        left 0
@media screen and (max-width:1000px)
    #header
        width 300px
    #wrapper
        margin-left 340px

@media screen and (max-width:767px)
    #header
        position static
        width auto
        .social
            position static

    #wrapper
        margin 0

    